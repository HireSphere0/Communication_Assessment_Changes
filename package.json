{
  "name": "communication-assessment-app",
  "version": "1.0.0",
  "description": "Comprehensive communication assessment web app with 7 different assessment types",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t communication-assessment .",
    "docker:run": "docker run -p 8080:8080 --env-file .env communication-assessment",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --rmi all",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose --profile production up -d"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "fluent-ffmpeg": "^2.1.3",
    "gridfs-stream": "^1.1.1",
    "jsonwebtoken": "^9.0.2",
    "microsoft-cognitiveservices-speech-sdk": "^1.45.0",
    "mongoose": "^8.0.3",
    "multer": "^2.0.1",
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "puppeteer": "^24.22.2",
    "razorpay": "^2.9.6",
    "validator": "^13.11.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "communication",
    "assessment",
    "pronunciation",
    "speech",
    "ai",
    "azure",
    "openai",
    "education",
    "authentication",
    "mongodb"
  ],
  "author": "",
  "license": "MIT"
}
